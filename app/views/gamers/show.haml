=# @gamer.inspect

%h1
  = @gamer.to_label
  = verified_badge(@gamer.verified, false)
  - if @gamer.id == current_gamer.id
    %small
      .pull-right= link_to fa_icon('cogs'), edit_gamer_path(@gamer)

.row
  .col-md-4
    %h3 About
    %table.table
      %colgroup
        %col{ style: 'width: 30%' }
        %col{ style: 'width: 70%' }
      %tbody
        %tr
          %th Dedication
          %td= @gamer.dedication_label
        %tr
          %th Weekday Availability
          %td= @gamer.weekday_availability_label
        %tr
          %th Weekend Availability
          %td= @gamer.weekend_availability_label
        %tr
          %th Swearing
          %td= @gamer.swearing_label
        %tr
          %th Swearing Tolerance
          %td= @gamer.swearing_tolerance_label
        %tr
          %th Privacy
          %td= @gamer.privacy_label
        %tr
          %th Age
          %td= @gamer.age
        %tr
          %th Sex
          %td= @gamer.sex_label
  .col-md-4
    %h3 Teams
    = render partial: 'memberships/summary_table', locals: { memberships: @gamer.memberships.for_teams }
  .col-md-4
    %h3 Communities
    = render partial: 'memberships/summary_table', locals: { memberships: @gamer.memberships.for_communities }
.row
  .col-md-4
    %h3 Language Proficiencies
    %table.table
      %thead
        %tr
          %th Language
          %th Native
          %th Understanding
          %th Speaking
          %th Writing
      %tbody
        - @gamer.language_proficiencies.each do |lp|
          %tr
            %td= lp.language
            %td= yes_or_no(lp.native)
            %td= lp.understanding
            %td= lp.speaking
            %td= lp.writing
